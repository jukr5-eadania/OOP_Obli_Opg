<Window x:Class="Zoo_Simulator.Add_Animal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoo_Simulator"
        mc:Ignorable="d"
        Title="Add_Animal" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <Label>
                Please add an animal to a cage
            </Label>
            <Label>
                Please select which cage the animal should go in
            </Label>
            <ComboBox x:Name="CageSelect" Width="120"/>
            <Label>
                Please select what animal should go in the cage
            </Label>
            <ComboBox x:Name="Select_Animal" Width="120"/>
            <Label>
                Please enter animal name:
            </Label>
            <TextBox x:Name="Add_Animal_Input" TextWrapping="Wrap" Width="120"/>
        </StackPanel>
        <Button x:Name="Popup_Add_Animal" Content="Add Animal" HorizontalAlignment="Center" Margin="0,192,0,0" VerticalAlignment="Top" Click="Popup_Add_Animal_Click"/>
    </Grid>
</Window>
